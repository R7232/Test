<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_red_light">

    <ImageView
        android:id="@+id/text_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:src="@drawable/figure" />

    <TextView
        android:id="@+id/text_image1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/text_image"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="火影忍者疾風傳"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignBottom="@+id/text_image"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/text_image"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:text="在一次通靈之術"
        android:textColor="@android:color/white"
        android:textSize="24sp"/></RelativeLayout>
</LinearLayout>
